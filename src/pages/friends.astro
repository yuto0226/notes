---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import FriendCard from '@/components/FriendCard.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllFriends } from '@/lib/data-utils'

const friends = await getAllFriends()
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="Friends" />
  <Breadcrumbs items={[{ label: 'Friends', icon: 'lucide:users' }]} />
  {
    friends.length > 0 ? (
      <ul class="mb-12 list-none columns-1 gap-4 space-y-4 pl-0 md:columns-2">
        {friends.map((friend) => (
          <li class="break-inside-avoid">
            <FriendCard friend={friend} />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted-foreground mb-12 text-center">
        No friends found. ｡ﾟヽ(ﾟ´Д`)ﾉﾟ｡
      </p>
    )
  }
</Layout>
