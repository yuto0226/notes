---
import FriendCard from '@/components/FriendCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllFriends } from '@/lib/data-utils'

const friends = await getAllFriends()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Friends" />
  <Breadcrumbs items={[{ label: 'Friends', icon: 'lucide:users' }]} />
  {
    friends.length > 0 ? (
      <ul class="flex flex-col gap-4">
        {friends.map((friend) => (
          <li>
            <FriendCard friend={friend} />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted-foreground text-center">No friends found. ｡ﾟヽ(ﾟ´Д`)ﾉﾟ｡</p>
    )
  }
</Layout>
